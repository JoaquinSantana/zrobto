<div class="panel panel-default">
    <ul class="list-group">
	  <li class="list-group-item">
	  	<div class="panel-heading"><b><%= task.name %></b></div>
	  	<div class="panel-body well">
	  		<div class="row">
	  			<div class="col-md-4">
		  			<%= task.description %>
					<%= task.link %>
	  			</div>
	  			<div class="col-md-4">
	  				<% if task.completed %>
	  					<i class="fa fa-check fa-5x pull-right"></i>
	  				<% end %>
	  			</div>
	  		</div>

			<p>Utworzony przez: <%= task.user.nick %></p>
		</div>
	  </li>
	  	<% if ( current_user == task.user ) %>
	 		<li class="list-group-item">
	 			<div class="btn-group btn-group-sm">
	          		<%= link_to 'Edit', edit_task_path(task), class: 'btn btn-success' %>
	          		<%= link_to 'UsuÅ„', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %>
	          		<% unless task.zakonczone? %>
	          			<%= link_to gotowe_task_path(task), method: :patch, class: 'btn btn-danger' do %>
	          				<i class="fa fa-check-square-o"> Zrobione?</i>
	          			<% end %>
	          		<% else %>
	          		<br>
						<h3><span class="label label-primary">Zadanie wykonane !</span></h3>
	          		<% end %>
				</div>
	       	</li>
       	<% end %>
	</ul>
</div>
