<%= content_for(:title, "Zrob_to APP") %>
<div class="panel panel-default">
  <div class="panel-heading"><h3><b>Wszystkie zadania</b></h3></div>
  <div class="panel-body">
    <% @tasks.each do |task| %>
    <div class="panel panel-default">
	    <ul class="list-group">
		  <li class="list-group-item">
		  	<div class="panel-heading"><b><%= task.name %></b></div>
		  	<div class="panel-body">
			  	<%= task.description %>
				<%= task.link %>
			</div>
		  </li>
	 		<li class="list-group-item">
	 			<div class="btn-group btn-group-sm">
	          		<%= link_to 'Edit', edit_task_path(task), class: 'btn btn-success' %>
	          		<%= link_to 'UsuÅ„', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %>
				  	<%= link_to 'New Task', new_task_path, class: 'btn btn-success' %>
				</div>

	       </li>
		</ul>
	</div>
    <% end %>
</div>
</div>
