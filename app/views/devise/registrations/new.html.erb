<div class="col-md-6 col-md-offset-3 well well-lg">
<h2 class='signlog'>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: false do %>
      <div class="input-group">
        <%= f.input_field :email, class: 'form-control', placeholder: 'Email' %>
        <span class="input-group-addon glyphicon glyphicon-envelope"></span>
      </div>
    <% end %>

   <div class="form-inputs">
    <%= f.input :password, label: false do %>
      <div class="input-group">
        <%= f.input_field :password, class: 'form-control', placeholder: 'Password' %>
        <span class="input-group-addon glyphicon glyphicon-lock"></span>
      </div>
   <% end %>

   <div class="form-inputs">
    <%= f.input :password_confirmation, label: false do %>
      <div class="input-group">
        <%= f.input_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
        <span class="input-group-addon glyphicon glyphicon-lock"></span>
      </div>
   	<% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-success btn-block btn-lg' %>
  </div>
<% end %>
</div>
</div>