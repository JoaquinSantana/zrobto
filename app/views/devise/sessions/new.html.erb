<div class="col-md-8 col-md-offset-2 panel panel-default">
	<div class="panel-heading">
		<h3><b>Sign in</b></h3>
	</div>

	<div class="panel-body">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

			<%= f.input :email, label: false do %>
		      <div class="input-group">
		        <%= f.input_field :email, class: 'form-control input-lg', placeholder: 'Email' %>
		        <span class="input-group-addon glyphicon glyphicon-envelope"></span>
		      </div>
		    <% end %>

		    <%= f.input :password, label: false do %>
		      <div class="input-group">
		        <%= f.input_field :password, class: 'form-control input-lg', placeholder: 'Password' %>
		        <span class="input-group-addon glyphicon glyphicon-random"></span>
		      </div>
		    <% end %>
				<%= f.input :remember_me, as: :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>

			</div>

		  <div class="form-actions">
		    <%= f.button :submit, "Sign in", class: 'btn btn-success' %>
		  </div>
		<% end %>

	<%= render "devise/shared/links" %>
</div>
