<div class="col-md-6 col-md-offset-3 well well-lg">
	<h2 class='signlog'>Sign in</h2>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <%= f.error_notification %>

			  <div class="form-inputs">
			    <%= f.input :email, label: false do %>
			      <div class="input-group">
			        <%= f.input_field :email, class: 'form-control', placeholder: 'Email' %>
			        <span class="input-group-addon glyphicon glyphicon-envelope"></span>
			      </div>
			    <% end %>

			   <div class="form-inputs">
			    <%= f.input :password, label: false do %>
			      <div class="input-group">
			        <%= f.input_field :password, class: 'form-control', placeholder: 'Password' %>
			        <span class="input-group-addon glyphicon glyphicon-lock"></span>
			      </div>
			   <% end %>

			   <%= f.input :remember_me, as: :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>

			  <div class="form-actions">
			    <%= f.button :submit, "Sign in", class: 'btn btn-success btn-block btn-lg' %>
			  </div>

			<% end %>
	</div>
</div>